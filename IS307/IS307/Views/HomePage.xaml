<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pc="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:res="clr-namespace:IS307.Resources"
             x:Class="IS307.Views.HomePage"
             x:Name="root"
             BackgroundColor="#F0F2F5">
  <RefreshView IsRefreshing="{Binding IsBusy}"
               Command="{Binding LoadPageCommand}">
    <ScrollView>
      <AbsoluteLayout>
        <Grid BackgroundColor="#10ac84">
          <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
          </Grid.RowDefinitions>
          <Label Text="Trang chủ"
                 FontSize="Medium"
                 TextColor="White"
                 HorizontalTextAlignment="Center"
                 VerticalOptions="Center"></Label>
          <pc:PancakeView Grid.Row="1"
                          BackgroundColor="#F0F2F5"
                          CornerRadius="25, 25, 0,0"
                          IsClippedToBounds="true"
                          HorizontalOptions="FillAndExpand">
            <CollectionView ItemsSource="{Binding Products}"
                            Margin="10">
              <CollectionView.ItemsLayout>
                <GridItemsLayout Span="2"
                                 VerticalItemSpacing="5"
                                 HorizontalItemSpacing="5"
                                 Orientation="Vertical"></GridItemsLayout>
              </CollectionView.ItemsLayout>
              <CollectionView.Header>
                <Grid Margin="0">
                  <Grid.RowDefinitions>
                    <RowDefinition Height="220"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                  </Grid.RowDefinitions>
                  <StackLayout Grid.Row="0">
                    <Label Text="Danh mục"
                           FontAttributes="Bold"
                           TextColor="Black"
                           FontSize="Title"></Label>
                    <CarouselView ItemsSource="{Binding Categories}">
                      <CarouselView.ItemTemplate>
                        <DataTemplate>
                          <StackLayout Padding="10, 0">
                            <Frame HasShadow="False"
                                   BackgroundColor="{Binding color}"
                                   CornerRadius="15">
                              <Grid RowSpacing="0">
                                <Grid.RowDefinitions>
                                  <RowDefinition Height="2*"></RowDefinition>
                                  <RowDefinition Height="8*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <StackLayout Grid.Row="0"
                                             Orientation="Horizontal">
                                  <Label MaxLines="1"
                                         FontSize="Small"
                                         TextColor="White"
                                         TextTransform="Uppercase"
                                         HorizontalOptions="StartAndExpand"
                                         FontAttributes="Bold"
                                         Text="{Binding name}"></Label>
                                  <Label FontFamily="Material"
                                         FontSize="Large"
                                         Text="{Static res:IconFont.DotsHorizontal}"
                                         TextColor="White"
                                         HorizontalOptions="End">
                                    <Label.GestureRecognizers>
                                      <TapGestureRecognizer Command="{Binding BindingContext.ViewProductInCategoryCommand, Source={Reference root}}"
                                                            CommandParameter="{Binding .}"></TapGestureRecognizer>
                                    </Label.GestureRecognizers>
                                  </Label>
                                </StackLayout>
                                <Image Grid.Row="1"
                                       Aspect="AspectFit"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       Source="{Binding pictureUrl}"></Image>
                              </Grid>
                            </Frame>
                          </StackLayout>
                        </DataTemplate>
                      </CarouselView.ItemTemplate>
                    </CarouselView>
                  </StackLayout>
                  <Label Grid.Row="2"
                         Text="Nổi bật"
                         FontAttributes="Bold"
                         TextColor="Black"
                         FontSize="Title"></Label>
                </Grid>
              </CollectionView.Header>
              <CollectionView.ItemTemplate>
                <DataTemplate>
                  <AbsoluteLayout>
                    <Frame WidthRequest="170"
                           Padding="10"
                           HasShadow="False"
                           BackgroundColor="White"
                           CornerRadius="10">
                      <Grid Padding="0,8"
                            RowSpacing="0">
                        <Grid.RowDefinitions>
                          <RowDefinition Height="120"></RowDefinition>
                          <RowDefinition Height="30"></RowDefinition>
                          <RowDefinition Height="30"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Image Margin="0, 0, 0, 10"
                               Aspect="AspectFit"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               Source="{Binding pictureUrl}"></Image>
                        <Label Grid.Row="1"
                               MaxLines="2"
                               FontSize="Small"
                               VerticalTextAlignment="End"
                               FontAttributes="Bold"
                               Text="{Binding name}"></Label>
                        <Label Grid.Row="2"
                               HorizontalOptions="StartAndExpand"
                               FontAttributes="Bold"
                               VerticalTextAlignment="Center"
                               FontSize="Small"
                               TextColor="#b71540"
                               Text="{Binding price, StringFormat='{0:##,0}.000đ'}"></Label>
                      </Grid>
                    </Frame>
                    <pc:PancakeView BackgroundColor="#c7ecee"
                                    AbsoluteLayout.LayoutFlags="PositionProportional"
                                    AbsoluteLayout.LayoutBounds="0.97, 0.03"
                                    CornerRadius="15">
                      <Grid RowSpacing="0"
                            ColumnSpacing="0">
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="30"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                          <RowDefinition Height="30"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label FontFamily="Material"
                               Text="{Static res:IconFont.DotsVertical}"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"></Label>
                        <Grid.GestureRecognizers>
                          <TapGestureRecognizer Command="{Binding BindingContext.ViewProductDetailCommand, Source={Reference root}}"
                                                CommandParameter="{Binding .}"></TapGestureRecognizer>
                        </Grid.GestureRecognizers>
                      </Grid>
                    </pc:PancakeView>
                  </AbsoluteLayout>
                </DataTemplate>
              </CollectionView.ItemTemplate>
            </CollectionView>
          </pc:PancakeView>
        </Grid>
        <ContentView x:Name="Loading"
                     AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                     AbsoluteLayout.LayoutFlags="All"
                     IsVisible="False">
          <StackLayout VerticalOptions="Center"
                       HorizontalOptions="Center">
            <StackLayout Orientation="Vertical"
                         HeightRequest="150"
                         WidthRequest="200">
              <ActivityIndicator IsRunning="True"
                                 Color="Orange"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"></ActivityIndicator>
            </StackLayout>
          </StackLayout>
        </ContentView>
      </AbsoluteLayout>
    </ScrollView>
  </RefreshView>
</ContentPage>