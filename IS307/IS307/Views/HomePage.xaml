<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:vm="clr-namespace:IS307.ViewModels"
                xmlns:controls="clr-namespace:IS307.Controls"
                xmlns:pc="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
                xmlns:res="clr-namespace:IS307.Resources"
                x:Class="IS307.Views.HomePage"
                NavigationPage.HasNavigationBar="False"
                x:Name="root">
    <ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="250"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Frame Grid.Row="1" HasShadow="False" IsClippedToBounds="True" Margin="10, 7" HeightRequest="45" CornerRadius="30" Padding="0">
                <controls:CustomEntry Placeholder="Search" BorderColor="WhiteSmoke" BackgroundColor="WhiteSmoke" FontSize="15" HeightRequest="60" Image="search" ImageAlignment="Right" ImageWidth="15" ImageHeight="15" CornerRadius="30" IsCurvedCornersEnabled="True"/>
            </Frame>

            <Frame Grid.Row="2" HasShadow="False" BorderColor="Transparent">
                <StackLayout>
                    <Label Text="Hot" FontAttributes="Bold" TextColor="Black" FontSize="20"/>
                    <CollectionView 
                        x:Name="lstProducts"
                        IsGrouped="False"
                        ItemsSource="{Binding Products}"
                        ItemSizingStrategy="{OnPlatform Android=MeasureAllItems,iOS=MeasureFirstItem}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="20" Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame WidthRequest="170" Padding="10" HasShadow="True" BackgroundColor="#CDD9CD" CornerRadius="10">
                                    <Grid Padding="0,8"
                                            RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="3*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition  Height="24" />
                                        </Grid.RowDefinitions>
                                        <Image
                                            Aspect="AspectFit"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Center"
                                            Source="{Binding PictureUrl}" />

                                        <Label
                                            Grid.Row="1"
                                            MaxLines="2"
                                            FontSize="Small"
                                            VerticalTextAlignment="End"
                                            Text="{Binding Name}" />

                                        <StackLayout
                                            Grid.Row="2"
                                            Orientation="Horizontal">
                                            <Label
                                                HorizontalOptions="StartAndExpand"
                                                FontAttributes="Bold"
                                                VerticalTextAlignment="Center"
                                                FontSize="Small"
                                                Text="{Binding Pricing, StringFormat='{0:##,0}k'}" />

                                            <pc:PancakeView
                                                BackgroundColor="AliceBlue"
                                                CornerRadius="12">
                                                <Grid
                                                    RowSpacing="0"
                                                    ColumnSpacing="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition
                                                    Width="24" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition
                                                    Height="24" />
                                                    </Grid.RowDefinitions>

                                                    <Label
                                                        FontFamily="Material"
                                                        Text="{Static res:IconFont.Plus}"
                                                        VerticalOptions="Center"
                                                        HorizontalOptions="Center" />

                                                    <Grid.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                            Command="{Binding BindingContext.ViewProductDetailCommand, Source={Reference root}}"
                                                            CommandParameter="{Binding .}" />
                                                    </Grid.GestureRecognizers>
                                                </Grid>
                                            </pc:PancakeView>
                                        </StackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <Grid
                IsVisible="false"
                Grid.Row="0"
                Grid.RowSpan="4"
                BackgroundColor="#9A000000">
                <Grid.Margin>
                    <OnPlatform
                    x:TypeArguments="Thickness">
                        <On
                        Platform="iOS"
                        Value="0,-32,0,0" />
                        <On
                        Platform="Android"
                        Value="0,-24,0,0" />
                    </OnPlatform>
                </Grid.Margin>
                <pc:PancakeView
                    x:Name="itemContainer"
                    BackgroundColor="White"
                    VerticalOptions="EndAndExpand"
                    CornerRadius="20">
                    <Grid RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition
                            Height="24" />
                            <RowDefinition
                            Height="144" />
                            <RowDefinition
                            Height="*" />
                            <RowDefinition
                            Height="96" />
                        </Grid.RowDefinitions>


                        <ContentView>
                            <BoxView
                            CornerRadius="4"
                            HeightRequest="8"
                            WidthRequest="72"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            BackgroundColor="AntiqueWhite" />
                            <ContentView.GestureRecognizers>
                                <PanGestureRecognizer
                                PanUpdated="PanGestureRecognizer_PanUpdated" />
                            </ContentView.GestureRecognizers>
                        </ContentView>

                        <Image
                            Grid.Row="1"
                            Aspect="AspectFit"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            Margin="24"
                            Source="https://gigamall.com.vn/data/2019/09/20/11493168_Trung-t%C3%A2m-th%C6%B0%C6%A1ng-m%E1%BA%A1i-GIGAMALL-McDonalds-1.jpg" />

                        <StackLayout
                            Spacing="0"
                            Grid.Row="2">
                            <Label
                                FontAttributes="Bold"
                                HorizontalTextAlignment="Center"
                                Text="Big Mac Burger" />
                            <Label
                                HorizontalTextAlignment="Center"
                                Text="AED 24" />

                            <Label
                                Padding="24,16"
                                FontSize="Small"
                                HorizontalTextAlignment="Center"
                                Text="The current TouchStarted/TouchDelta/TouchCompleted pattern is a good start that works for pan/zoom and some other scenarios" />


                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition
                                    Height="128" />
                                </Grid.RowDefinitions>
                            </Grid>
                        </StackLayout>
                        <Grid
                            VerticalOptions="Center"
                            Grid.Row="3"
                            ColumnSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="64" />
                            </Grid.RowDefinitions>

                            <pc:PancakeView
                                BorderColor="DarkCyan"
                                BorderThickness="1"
                                CornerRadius="24"
                                Margin="24,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                            VerticalTextAlignment="Center"
                                            FontFamily="Material"
                                            Text="{Static res:IconFont.Minus}"
                                            FontSize="20"
                                            HorizontalTextAlignment="Center"
                                            FontAttributes="Bold" />
                                    <Label
                                            VerticalOptions="Center"
                                            Grid.Column="1"
                                            Text="100"
                                            FontSize="Small"
                                            HorizontalTextAlignment="Center"
                                            FontAttributes="Bold" />
                                    <Label
                                            VerticalTextAlignment="Center"
                                            Grid.Column="2"
                                            FontFamily="Material"
                                            Text="{Static res:IconFont.Plus}"
                                            FontSize="20"
                                            HorizontalTextAlignment="Center"
                                            FontAttributes="Bold" />
                                </Grid>
                            </pc:PancakeView>

                            <pc:PancakeView
                                Grid.Column="1"
                                BackgroundColor="Black"
                                CornerRadius="24"
                                Margin="24,8">
                                <Label
                                    Padding="16,0"
                                    VerticalOptions="Center"
                                    Text="Add to Cart"
                                    TextColor="White"
                                    HorizontalTextAlignment="Center"
                                    FontAttributes="Bold" />

                                <pc:PancakeView.GestureRecognizers>
                                    <TapGestureRecognizer
                                            Command="{Binding AddToCartCommand}"
                                            CommandParameter="{Binding ShownProduct}" />
                                </pc:PancakeView.GestureRecognizers>
                            </pc:PancakeView>
                        </Grid>
                    </Grid>
                </pc:PancakeView>
            </Grid>

        </Grid>
    </ContentPage.Content>
</ContentPage>